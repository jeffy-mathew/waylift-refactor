{
  "name": "tennis-refactoring-kata",
  "version": "1.0.0",
  "description": "Tennis refactoring kata in TypeScript",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "tsc --declaration -p tsconfig.json",
    "watch": "tsc -p tsconfig.json -w",
    "test": "TS_NODE_FAST=true mocha --require ts-node/register 'tests/**/*.test.ts'",
    "test:watch": "TS_NODE_FAST=true mocha --reporter min  --require ts-node/register --watch 'tests/**/*.test.ts'",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "@types/chai": "^4.2.19",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "chai": "^4.3.4",
    "mocha": "^9.0.1",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  }
}
